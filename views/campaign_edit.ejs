<form action="/campaign/save" method="post">
    <div class="form-group col-md-3">
        <label for="name">Campaign Name</label>
        <input type="text" class="form-control" id="name" name="name" <% if(add == true){ %> value="" <%}else{ %> value="<%= campaign.name %>" <%}%>> 
    </div>
    
    <% if(add == true){ %>
        <div class="form-group col-md-3">
            <label for="is_country_divided">is_country_divided</label>
            <select class="form-control" id="is_country_divided" name="is_country_divided">
                <option value="0">No</option>
                <option value="1">Yes</option>
            </select>      
        </div>
        
        <div class="form-group col-md-3">
            <label for="type">Type</label>
            <select class="form-control" id="type" name="type">
                <option value="1">Ads</option>
                <option value="2">Self-JS</option>
            </select>      
        </div>
        
        <div class="form-group col-md-3">
            <label for="country">Target Country</label>
            <select class="form-control" id="country" name="country">
                <option value="IN">India</option>
                <option value="MY">Malaysia</option>
                <option value="ID">Indonesia</option>
                <option value="HK">Hong-kong</option>
                <option value="SG">Singapore</option>
                <option value="TH">Vietnam</option>
                <option value="TH">Thailand</option>
                <option value="PH">Philippines</option>
                <option value="AE">Dubai</option>
            </select>      
        </div>
        
        <div class="form-group col-md-3">
            <label for="redir_url">Active</label>
            <select class="form-control" id="active" name="active">
                <option value="0">No</option>
                <option value="1">Yes</option>
            </select>      
        </div>
    <%}else{%>
        <input type="hidden" name="id" value="<%= campaign.id %>">
        <div class="form-group col-md-3">
            <label for="is_country_divided">is_country_divided</label>
            <select class="form-control" id="is_country_divided" name="is_country_divided">
                <option value="0" <% if(campaign.is_country_divided==0){%>selected <% } %>} %> >No</option>
                <option value="1" <% if(campaign.is_country_divided==1){%>selected <% } %>} %>>Yes</option>
            </select>   
            <!-- <input type="text" class="form-control" id="is_country_divided" name="is_country_divided" value="">       -->
        </div>
        <div class="form-group col-md-3">
            <label for="type">Type</label>
            <select class="form-control" id="type" name="type">
                <option value="1" <% if(campaign.type==1){%>selected <% } %>} %>>Ads</option>
                <option value="2" <% if(campaign.type==2){%>selected <% } %>} %>>Self-JS</option>
            </select>      
        </div>
        <div class="form-group col-md-3">
            <label for="country">Target Country</label>
            <select class="form-control" id="country" name="country">
                <option value="IN" <% if(campaign.country=="IN"){%>selected <% } %>} %>>India</option>
                <option value="MY" <% if(campaign.country=="MY"){%>selected <% } %>} %>>Malaysia</option>
                <option value="ID" <% if(campaign.country=="ID"){%>selected <% } %>} %>>Indonesia</option>
                <option value="HK" <% if(campaign.country=="HK"){%>selected <% } %>} %>>Hong-kong</option>
                <option value="SG" <% if(campaign.country=="SG"){%>selected <% } %>} %>>Singapore</option>
                <option value="TH" <% if(campaign.country=="TH"){%>selected <% } %>} %>>Vietnam</option>
                <option value="TH" <% if(campaign.country=="TH"){%>selected <% } %>} %>>Thailand</option>
                <option value="PH" <% if(campaign.country=="PH"){%>selected <% } %>} %>>Philippines</option>
                <option value="AE" <% if(campaign.country=="AE"){%>selected <% } %>} %>>Dubai</option>
            </select>      
        </div>
        <div class="form-group col-md-3">
            <label for="redir_url">Active</label>
            <select class="form-control" id="active" name="active">
                <option value="0" <% if(campaign.active==0){%>selected <% } %>} %>>No</option>
                <option value="1" <% if(campaign.active==1){%>selected <% } %>>Yes</option>
            </select>   
            <!-- <input type="text" class="form-control" id="active" name="active" value="<%= campaign.active %>">       -->
        </div>
    <%}%>
    
    
    
    <button type="submit" class="btn btn-primary">Submit</button>
    <button type="button" id="campaign_cancel" class="btn btn-warning">Cancel</button>
</form>